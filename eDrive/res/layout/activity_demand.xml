<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/demand_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
  <include layout="@layout/header_main" />  
       <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true" />
          <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/Grey_line"
        />
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="@dimen/demand_bottom_height"
      android:padding="@dimen/demand_bottom_padding"
      >
      <ImageButton
          android:id="@+id/demand_btn_switch"
          android:layout_width="@dimen/demand_bottom_height"
          android:layout_height="match_parent"
          android:background="@drawable/demand_order_switchbtn"
          android:src="@drawable/demand_sound"
          />
      <LinearLayout
          android:id="@+id/demand_lay_switch"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/demand_order_tv"
              android:gravity="center"
              android:layout_marginLeft="@dimen/stroke_width"
              android:clickable="true"
              android:focusable="true"
           >
          <TextView
              android:id="@+id/demand_tv_switch"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/demand_input"
              android:gravity="center"
              android:text="@string/demand_bottom_tv"
              />
          </LinearLayout>
  </LinearLayout>
</LinearLayout>
<com.huishen.edrive.widget.GuideView
    android:id="@+id/demand_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    />
</FrameLayout>