                        android:src="@drawable/center_demand_ic" />

                    <TextView
                        style="@style/coachdetailtextstyle"
                        android:text="@string/menu_hospital" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_next"
                        />
                </LinearLayout>
