<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_default"
    android:orientation="vertical"
    android:background="@drawable/selector_lab_btn"
    android:padding="@dimen/padding_middle"
     >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       > 
      <TextView 
           android:id="@+id/judge_listitem_stuname"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:textColor="@color/tv_gray_color"
           android:text="13******01 12-03 12:33"
           android:paddingLeft="@dimen/padding_middle"
           android:textSize="@dimen/txtsize_middle"
           />
       <RatingBar
           android:id="@+id/ratingbar"
           style="@style/RatingBar_Mini"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:numStars="5"
           android:rating="2.5"
           android:stepSize="0.1"
           android:isIndicator="true"
           />
    
       </LinearLayout>
       <TextView
           android:id="@+id/judge_listitem_content"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/tv_light_color"
           android:text="教练人好，认真负责"
           android:layout_marginTop="@dimen/margin_middle"
           android:textSize="@dimen/txtsize_default"
           android:ellipsize="end"
           android:singleLine = "true"
           />

</LinearLayout>
