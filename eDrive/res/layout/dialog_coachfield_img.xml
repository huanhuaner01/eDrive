<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white"
    >
   <FrameLayout
       android:id = "@+id/dialog_frame"
       android:layout_width="match_parent"
       android:layout_height="@dimen/coach_detail_fieldimg_dialog_height"
       >
       <android.support.v4.view.ViewPager
           android:id="@+id/dialog_coachfield_viewpager"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           </android.support.v4.view.ViewPager>
           
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >
               <TextView
                   android:id="@+id/dialog_coachfield_num"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="0/0"
                   android:layout_alignParentBottom="true"
                   android:background="@color/translucent"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:padding="@dimen/padding_middle"
                   android:textSize="@dimen/txtsize_middle"
                   />
               </RelativeLayout>
       </FrameLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        android:background="@color/white"
        >

        <Button
            android:id="@+id/dialog_coachfield_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/bkg_verify_btn_start"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_default" />
        
    </LinearLayout>

</LinearLayout>
