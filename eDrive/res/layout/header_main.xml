<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/header_bg_color"
    android:orientation="vertical"
     >
     <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
         >
    <ImageButton
        android:id="@+id/header_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/header_back_padding"
        android:paddingRight="@dimen/header_back_padding"
        android:src="@drawable/ic_main_menu"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_default_btn"
        />
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_centerInParent="true"
         android:src="@drawable/main_title_ic"
         android:gravity="center"
         android:paddingTop="@dimen/header_title_padding"
         android:paddingBottom="@dimen/header_title_padding"
         />
            
            <ImageButton
                android:id="@+id/main_btn_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/header_back_padding"
                android:paddingRight="@dimen/header_back_padding"
                android:contentDescription="@null"
                android:src="@drawable/ic_msg"
                android:background="@drawable/selector_default_btn"
                />
            

        <ImageView
                android:id="@+id/have_message_tag"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/red_dot"
                android:layout_alignRight="@id/main_btn_msg"
                android:layout_alignTop="@id/main_btn_msg"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_micro"
                />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line"
        android:background="@color/Grey_line"
        />
    </LinearLayout>
